<link href="~/Content/Views/DivisionN3/Index.css" rel="stylesheet" />

<script src="~/Scripts/Views/DivisionN3/Index.js"></script>

<script type="text/javascript">
    $(window).load(function () { $("#spinner").fadeOut("slow"); })
    $(document).ready(function () {
        var listCmd = '@this.Url.Action("GetDivisionN3s", "DivisionN3")';
        var deleteCmd = '@this.Url.Action("DeleteDivisionN3", "DivisionN3")';
        var updateCmd = '@this.Url.Action("UpdateDivisionN3", "DivisionN3")';
        var createCmd = '@this.Url.Action("CreateDivisionN3", "DivisionN3")';
        DivisionN3Index.initializeComponents(listCmd, deleteCmd, updateCmd, createCmd);
    });
</script>
@using (Html.BeginForm("Index", "DivisionN3", FormMethod.Post, new { id = "formDivisionN3" }))
{
    <div>
        <div>
            <h2 class="h2">Divisiones N3</h2>
        </div>
    </div>

    <div>
        <div>
            <table style="width: 100%; text-align: center;">
                <tr>
                    <td>
                        <input id="txtName" name="txtName" placeholder="Nombre" type="text" />
                    </td>
                </tr>
            </table>
            <hr />
            <table style="width: 100%; text-align: center;">
                <tr>
                    <td>
                        <input type="submit" id="btnIndex" value="Atrás" class="input button" />
                        <input type="submit" id="btnSearch" value="Buscar" class="input button" />
                        <input type="submit" id="btnNewSearch" value="Nueva Búsqueda" class="input button" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div>
        <div>
            <hr />
        </div>
    </div>
    <div id="divDivisionN3TableContainerValue"></div>
}
