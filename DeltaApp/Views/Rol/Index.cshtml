
<link href="~/Content/Views/Rol/Index.css" rel="stylesheet" />

<script src="~/Scripts/Views/Rol/_UserRolByProduct.js"></script>
<script src="~/Scripts/Views/Rol/Index.js"></script>

<script type="text/javascript">
    $(window).load(function () { $("#spinner").fadeOut("slow"); })
    $(document).ready(function () {
        var listCmd = '@this.Url.Action("GetRols", "Rol")';
        var deleteCmd = '@this.Url.Action("DeleteRol", "Rol")';
        var updateCmd = '@this.Url.Action("UpdateRol", "Rol")';
        var createCmd = '@this.Url.Action("CreateRol", "Rol")';
        RolIndex.initializeComponents(listCmd, deleteCmd, updateCmd, createCmd);
    });
</script>

@using (Html.BeginForm("Index", "Rol", FormMethod.Post, new { id = "formDivisionN1" }))
{
    <div>
        <div>
            <h2 class="h2">Roles</h2>
        </div>
    </div>

    <div>
        <div>
            <table style="width: 100%; text-align: center;">
                <tr>
                    <td>
                        <input id="txtName" name="txtName" placeholder="Nombre" type="text" />
                    </td>
                </tr>
            </table>
            <hr />
            <table style="width: 100%; text-align: center;">
                <tr>
                    <td>
                        <input type="submit" id="btnIndex" value="Atrás" class="input button" />
                        <input type="submit" id="btnSearch" value="Buscar" class="input button" />
                        <input type="submit" id="btnNewSearch" value="Nueva Búsqueda" class="input button" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div>
        <div>
            <hr />
        </div>
    </div>
    <div id="divRolTableContainerValue"></div>
    @Html.Partial("~/Views/Rol/_UserRolByProduct.cshtml")
}
